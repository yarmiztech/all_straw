    <template id="common_day_book_view_2">
    		<t t-call="web.html_container">
    	    	<t t-foreach="docs" t-as="o">
            <t t-call="advanced_common_day_book.common_day_book_layout_2">
                <div class="page">
                    <h2><center><b>تقرير الكتاب اليومي</b></center></h2>
                    <t t-if="o.type == 'Day Book'">
                    <table style="width:100%">
                        <tr>
                            <td colspan="1"><b>تاريخ</b></td>
                            <td colspan="2"><t t-esc="o.date"/></td>
                            <td colspan="1"><br/></td>
                            <td colspan="1"><b>يكتب</b> </td>
                            <td colspan="2"><t t-esc="o.type"/> </td>

                        </tr>
                        <tr>
                            <t t-if="o.transaction_type_all==True">
                            <td colspan="7"><b>نوع المعاملة</b>:All</td>
                            </t>

                            <t t-if="o.transaction_type_sale==True">
                            <td colspan="7"><b>نوع المعاملة</b>:Sale</td>
                            </t>
                            <t t-if="o.transaction_type_purchase==True">
                            <td colspan="7"><b>نوع المعاملة</b>:Purchase</td>
                            </t>
                            <t t-if="o.transaction_type_expense==True">
                            <td colspan="7"><b>نوع المعاملة</b>:Expense</td>
                            </t>


                        </tr>



                        <tr style="border:1px solid black">
                            <td colspan="1" style="border:1px solid black"><center><b>تاريخ</b></center></td>
                            <td colspan="1" style="border:1px solid black"><center><b>وصف</b></center></td>
                            <td colspan="1" style="border:1px solid black"><center><b>مصدر</b></center></td>
